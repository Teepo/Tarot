<div class="gameboard">
    {{#each players}}

        <div class="gameboard-player gameboard-player__{{@index}}">

            <span class="gameboard-player-name">{{this.name}}</span>

            <div class="gameboard-player-cards">

                {{#each this.cards}}
                    <div class="carte carte__{{this.value}}">{{this.value}}</div>
                {{/each}}
            </div>
        </div>
    {{/each}}
</div>
