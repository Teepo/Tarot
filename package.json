{
    "name": "Tarot",
    "version": "0.0.2",
    "license": "UNLICENSED",
    "repository": {
        "type": "git",
        "url": "https://github.com/Teepo/Tarot"
    },
    "scripts": {
        "app": "yarn run build && node_modules/electron/cli.js ./src/js/index.js",
        "web": "./node_modules/serve/bin/serve.js ./public/",
        "jsdoc": "node_modules/jsdoc/jsdoc.js -c jsdoc.json",
        "install-bootstrap": "cd public/css/ && rm -Rf bootstrap && git clone https://github.com/twbs/bootstrap.git --branch v4.1.3",
        "install-vendor": "yarn run install-bootstrap",
        "build": "yarn run build-css && yarn run build-js",
        "build-css": "./node_modules/node-sass/bin/node-sass src/scss/app.scss --output ./public/css/",
        "build-js": "node_modules/webpack/bin/webpack.js --display-modules",
        "postinstall": "yarn run install-vendor"
    },
    "devDependencies": {
        "@babel/core": "^7.1.0",
        "@babel/plugin-syntax-dynamic-import": "^7.0.0",
        "@babel/plugin-transform-runtime": "^7.1.0",
        "@babel/preset-env": "^7.1.0",
        "@babel/runtime": "^7.0.0",
        "babel-eslint": "^9.0.0",
        "babel-loader": "^8.0.2",
        "docdash": "^1.0.0",
        "eslint": "^5.6.0",
        "eslint-loader": "^2.1.1",
        "html-minifier": "^3.5.10",
        "jsdoc": "^3.5.5",
        "node-sass": "^4.7.2",
        "serve": "^10.0.2",
        "webpack": "^4.19.1",
        "webpack-cli": "^3.1.1"
    },
    "dependencies": {
        "delegate": "^3.2.0",
        "electron": "^2.0.9",
        "handlebars": "^4.0.12",
        "html-loader": "^0.5.5"
    }
}
